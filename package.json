{
  "name": "@optics/hal-client",
  "version": "3.0.1",
  "description": "JavaScript client library for working with HAL-compliant HTTP APIs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "test": "jest",
    "commitmsg": "commitlint -E GIT_PARAMS"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/optics-team/hal-client.git"
  },
  "author": "Warren Seymour <warren@fountainhead.tech>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/optics-team/hal-client/issues"
  },
  "homepage": "https://github.com/optics-team/hal-client#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "^7.3.1",
    "@types/jest": "^19.2.4",
    "@types/lodash": "^4.14.64",
    "@types/ramda": "0.0.9",
    "@types/uri-templates": "^0.1.28",
    "commitlint": "^7.3.2",
    "husky": "^1.3.1",
    "jest": "^21.2.1",
    "jest-fetch-mock": "^1.1.1",
    "semantic-release": "^15.13.3",
    "ts-jest": "^21.0.1",
    "typescript": "^2.3.2"
  },
  "dependencies": {
    "lodash.defaultsdeep": "^4.6.0",
    "ramda": "^0.23.0",
    "uri-templates": "^0.2.0"
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testRegex": "(src/.*\\.test\\.ts)$",
    "collectCoverageFrom": [
      "src/**/*"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
